{
	"env": {
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"globals": {},
	"rules": {
		"array-bracket-spacing": [2, "never"],
		"arrow-parens": 2,
		"arrow-spacing": 2,
		"camelcase": [2, {
			"properties": "always"
		}],
		"comma-dangle": [2, "never"],
		"comma-spacing": [2, { "before": false, "after": true }],
		"comma-style": [2, "last"],
		"consistent-this": [2, "self"],
		"curly": [2, "all"],
		"dot-location": [2, "property"],
		"dot-notation": 2,
		"eol-last": 2,
		"eqeqeq": [2, "smart"],
		"func-call-spacing": [2, "never"],
		"guard-for-in": 2,
		"indent": [2, "tab", {
			"MemberExpression": "off",
			"SwitchCase": 1
		}],
		"key-spacing": [2, {
			"afterColon": true,
			"beforeColon": false
		}],
		"keyword-spacing": [2, {}],
		"no-bitwise": 2,
		"no-caller": 2,
		"no-empty": 2,
		"no-extra-bind": 2,
		"no-extra-semi": 2,
		"no-loop-func": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-multiple-empty-lines": [2, {
			"max": 1,
			"maxEOF": 0,
			"maxBOF": 0
		}],
		"no-multi-spaces": 2,
		"no-new": 2,
		"no-trailing-spaces": 2,
		"no-undef": 2,
		"no-unused-vars": 2,
		"no-use-before-define": [2, {
			"functions": false
		}],
		"no-var": 2,
		"no-with": 2,
		"object-curly-spacing": [2, "always"],
		"one-var": [2, "never"],
		"padded-blocks": [2, "never"],
		"quote-props": [2, "as-needed"],
		"quotes": [2, "single"],
		"semi": [2, "always"],
		"sort-imports": [2, { "ignoreCase": true }],
		"space-before-blocks": [2, "always"],
		"space-before-function-paren": [2, {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		}],
		"space-in-parens": [2, "never"],
		"space-infix-ops": 2,
		"space-unary-ops": [2, {
			"nonwords": false,
			"words": false
		}],
		"spaced-comment": [2, "always", {
			"markers": ["!"]
		}],
		"valid-jsdoc": [2, {
			"requireParamDescription": false,
			"requireReturn": false,
			"requireReturnDescription": false
		}],
		"wrap-iife": 2,
		"yoda": [2, "never"]
	},
	"overrides": [
		{
			"files": [
				"*.conf*.js",
				"webpack.*.js"
			],
			"env": {
				"browser": false,
				"node": true
			}
		},
		{
			"files": [
				"**/*.spec.js"
			],
			"plugins": ["jest"],
			"env": {
				"jest": true,
				"node": true
			}
		}
	]
}
